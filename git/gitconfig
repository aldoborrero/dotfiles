  ci = commit
  cm = commit -m
  ca = commit --ammend
  
	co = checkout
  cb = checkout -b
  
	br = branch
  
  merge = merge --no-ff --no-commit
  
  df = diff
  gl = log --all --graph --decorate --oneline -n30
  
  h = help
  
[format]
	pretty = %h - %an, %ar : %s
  
